{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["ES2022.Error"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@trne/utils/*": ["./packages/utils/src/*"],
      "@trne/ui-utils/*": ["./packages/ui/*"]
    }
  }
}
